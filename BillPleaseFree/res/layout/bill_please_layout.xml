<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/app_llv" >

    <LinearLayout 
        style="@style/top_bottom_ll" >

        <ImageView
            style="@style/icon_v"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/app_name_tv"
            android:layout_weight="1"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/btn_add_row"
            style="@style/button_icon_v"
            android:contentDescription="@string/btn_lbl_add_row"
            android:src="@android:drawable/ic_input_add" />
        
        <ImageButton
            android:id="@+id/btn_new_bill"
            style="@style/button_icon_v"
            android:contentDescription="@string/btn_lbl_new_bill"
            android:src="@android:drawable/ic_dialog_alert" />

    </LinearLayout>

    <ScrollView
        style="@style/app_v"
        android:layout_weight="1" >
        
        <LinearLayout
            android:id="@+id/ll_bill_rows"
            style="@style/vertical_linear_layout_v" >

            <LinearLayout 
                style="@style/app_row_llv" >

                <EditText
                    android:id="@+id/et_empty_item"
                    style="@style/bill_row_etv"
                    android:layout_weight="1"
                    android:text="@string/str_row_item" />

                <EditText
                        android:id="@+id/et_cost"
                        style="@style/et_number_view"
                        android:text="@string/str_row_cost" />

                <EditText
                        android:id="@+id/et_share"
                        style="@style/et_number_view"
                        android:text="@string/str_row_share" />
                
                <ImageButton
                    android:id="@+id/btn_del_row"
                    style="@style/button_icon_v"
                    android:contentDescription="@string/btn_lbl_del_row"
                    android:src="@android:drawable/ic_delete" />
                 
            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>
    
    <LinearLayout 
        style="@style/top_bottom_ll" >

        <TextView
            style="@style/totals_tv"
            android:layout_weight="1"
            android:text="@string/lbl_subtotal" />
        
        <TextView
            style="@style/total_input_tv" />
        
        <LinearLayout 
            style="@style/total_tv2" >

            <TextView
                android:id="@+id/lbl_subtotal_sum"
                style="@style/total_tv2"
                android:layout_weight="1"
                android:text="@string/str_zero" />

            <!-- <TextView
                style="@style/bottom_descr_input_tv"
                android:text="@string/str_conventional_unit" /> -->
            
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout 
        style="@style/top_bottom_ll" >

        <TextView
            style="@style/totals_tv"
            android:layout_weight="1"
            android:text="@string/lbl_tax" />

        <EditText
                android:id="@+id/et_tax_percent"
                style="@style/et_number_view"
                android:text="@string/str_tax_def" />
        
        <TextView
                android:id="@+id/lbl_tax_sum"
                style="@style/total_tv2"
                android:text="@string/str_zero" />
        
    </LinearLayout>
    
    <LinearLayout 
        style="@style/top_bottom_ll" >

        <TextView
            style="@style/totals_tv"
            android:layout_weight="1"
            android:text="@string/lbl_tip" />
        
        <EditText
                android:id="@+id/ed_tip_percent"
                style="@style/et_number_view"
                android:text="@string/str_tip_def" >
            </EditText>
        
        
        <LinearLayout 
            style="@style/total_tv2" >

            <TextView
                android:id="@+id/lbl_tip_sum"
                style="@style/total_tv2"
                android:layout_weight="1"
                android:text="@string/str_zero" />

            <!-- <TextView
                style="@style/bottom_descr_input_tv"
                android:text="@string/str_conventional_unit" /> -->
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        style="@style/top_bottom_ll" >

        <TextView
            style="@style/totals_tv"
            android:layout_weight="1"
            android:text="@string/lbl_total"
            android:textSize="20dp" />

        <TextView 
            style="@style/total_input_tv" />

        <LinearLayout 
            style="@style/total_tv2" >

            <TextView
                android:id="@+id/lbl_total_sum"
                style="@style/total_tv2"
                android:layout_weight="1"
                android:text="@string/str_zero" />

            <!-- <TextView
                style="@style/bottom_descr_input_tv"
                android:text="@string/str_conventional_unit" /> -->
            
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>