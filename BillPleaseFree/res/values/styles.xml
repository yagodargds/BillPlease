<resources>
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
    </style>

    <style name="main_lt">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/sky_blue_lightest</item>
    </style>
    
    <style name="action_bar_lt">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/sky_blue</item>
    </style>
    
    <style name="icon_iv">
        <item name="android:scaleType">centerInside</item>
    </style>
    
    <style name="action_bar_icon_iv" parent="icon_iv">
        <item name="android:layout_width">@dimen/action_bar_height</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <dimen name="action_bar_height">40dp</dimen>
    
    <color name="sky_blue">#33A7FF</color>
    <color name="sky_blue_light">#95D1FF</color>
    <color name="sky_blue_lightest">#E3F3FF</color>
    <color name="sky_blue_dark">#4D8EC0</color>
    <color name="sky_blue_darkest">#1165A6</color>
    
    <color name="orange">#FFA225</color>
    <color name="orange_light">#FFCE8E</color>
    <color name="orange_lightest">#FFF2E1</color>
    <color name="orange_dark">#C08B45</color>
    <color name="orange_darkest">#A6640C</color>
    
</resources>
