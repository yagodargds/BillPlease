<resources>
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
    </style>
    
    <style name="app_v">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="vertical_linear_layout_v" parent="app_v">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="horizontal_linear_layout_v" parent="app_v">
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="text_v" parent="app_v">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="icon_v" parent="app_v">
        <item name="android:layout_width">@dimen/app_row_height</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    
    <style name="app_llv" parent="vertical_linear_layout_v">
        <item name="android:baselineAligned">false</item>
        <item name="android:background">@color/sky_blue_lightest</item>
    </style>
    
    <style name="app_row_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_height">@dimen/app_row_height</item>
    </style>
    
    <style name="edit_text_v" parent="text_v">
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>
    
    <style name="app_name_tv" parent="text_v">
        <item name="android:textSize">@dimen/app_name_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>
    
    <style name="footer_row_tv" parent="text_v">
        <item name="android:textSize">@dimen/footer_row_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>
    
    <style name="button_icon_v" parent="icon_v">
        <item name="android:onClick">@string/on_btn_click_method_name</item>
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>
    
    <style name="header_footer_row_llv" parent="app_row_llv">
        <item name="android:background">@color/sky_blue</item>
    </style>
    
    <style name="input_etv" parent="edit_text_v">
        <item name="android:layout_width">@dimen/app_input_width</item>
    </style>

    <style name="number_etv" parent="input_etv">
        <item name="android:inputType">number</item>
    </style>

    <style name="number_decimal_etv" parent="input_etv">
        <item name="android:inputType">numberDecimal</item>
    </style>
    
    <style name="item_name_etv" parent="edit_text_v">
        <item name="android:inputType">textShortMessage</item>
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>
    
    <style name="footer_row_total_number_tv" parent="footer_row_tv">
        <item name="android:layout_width">@dimen/total_number_width</item>
    </style>
    
    <style name="footer_total_row_tv" parent="footer_row_tv">
        <item name="android:textSize">@dimen/footer_total_row_text_size</item>
    </style>
    
	<style name="cost_val_etv" parent="number_decimal_etv">
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>

    <style name="share_val_etv" parent="number_etv">
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>
    
    <style name="footer_number_etv" parent="number_etv">
        <item name="android:textSize">@dimen/footer_row_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>
    
    <style name="footer_total_row_number_tv" parent="footer_total_row_tv">
        <item name="android:layout_width">@dimen/total_number_width</item>
    </style>
    
    <dimen name="app_row_height">40dp</dimen>
    <dimen name="app_input_width">50dp</dimen>
    <dimen name="total_number_width">90dp</dimen>
    <dimen name="view_margin">1.5dp</dimen>
    
    <dimen name="app_name_text_size">18dp</dimen>
    <dimen name="text_size">12dp</dimen>
    <dimen name="footer_row_text_size">13dp</dimen>
    <dimen name="footer_total_row_text_size">14dp</dimen>
    
    <color name="sky_blue">#33A7FF</color>
    <color name="sky_blue_light">#95D1FF</color>
    <color name="sky_blue_lightest">#E3F3FF</color>
    <color name="sky_blue_dark">#4D8EC0</color>
    <color name="sky_blue_darkest">#1165A6</color>
    
    <color name="orange">#FFA225</color>
    <color name="orange_light">#FFCE8E</color>
    <color name="orange_lightest">#FFF2E1</color>
    <color name="orange_dark">#C08B45</color>
    <color name="orange_darkest">#A6640C</color>
    
</resources>
