<resources>
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
    </style>
    
    <style name="app_v">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="vertical_linear_layout_v" parent="app_v">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="horizontal_linear_layout_v" parent="app_v">
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="dlg_text_v" parent="app_v">
        <item name="android:layout_height">@dimen/text_view_height</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="bill_text_v" parent="dlg_text_v">
        <item name="android:inputType">textShortMessage</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="icon_v" parent="app_v">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="hidden_etv" parent="app_v">
        <item name="android:layout_width">@dimen/hidden_input_width</item>
    </style>

    <style name="app_llv" parent="vertical_linear_layout_v">
        <item name="android:baselineAligned">false</item>
        <item name="android:background">@color/sky_blue_lightest</item>
    </style>
    
    <style name="app_row_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dlg_input_etv" parent="dlg_text_v">
        <item name="android:layout_width">@dimen/dlg_input_width</item>
    </style>

    <style name="edit_text_v" parent="bill_text_v">
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>

    <style name="app_name_tv" parent="bill_text_v">
        <item name="android:textSize">@dimen/app_name_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>

    <style name="bill_row_tv" parent="bill_text_v">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="footer_row_tv" parent="bill_text_v">
        <item name="android:textSize">@dimen/footer_row_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>

    <style name="check_box_tv" parent="bill_text_v">
        <item name="android:layout_height">@dimen/check_box_height</item>
        <item name="android:layout_width">@dimen/check_box_width</item>
        <item name="android:background">@drawable/check_box_not_checked_rect</item>
    </style>

    <style name="button_icon_v" parent="icon_v">
        <item name="android:onClick">@string/on_btn_click_method_name</item>
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>
    
    <style name="action_bar_llv" parent="app_row_llv">
        <item name="android:background">@color/action_bar</item>
    </style>

    <style name="footer_llv" parent="app_row_llv">
        <item name="android:background">@color/footer</item>
    </style>

    <style name="footer_total_llv" parent="app_row_llv">
        <item name="android:background">@color/footer_total</item>
    </style>

    <style name="dlg_number_etv" parent="dlg_input_etv">
        <item name="android:inputType">number</item>
    </style>

    <style name="input_etv" parent="edit_text_v">
        <item name="android:layout_width">@dimen/bill_input_width</item>
    </style>

    <style name="number_etv" parent="input_etv">
        <item name="android:inputType">textShortMessage|number</item>
    </style>

    <style name="number_decimal_etv" parent="input_etv">
        <item name="android:inputType">textShortMessage|numberDecimal</item>
    </style>

    <style name="tax_tip_etv" parent="edit_text_v">
        <item name="android:layout_width">@dimen/tax_tip_input_width</item>
        <item name="android:inputType">textShortMessage|numberDecimal</item>
        <item name="android:textSize">@dimen/footer_row_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>

    <style name="item_name_etv" parent="edit_text_v">
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>

    <style name="bill_screen_edge_intent_tv" parent="bill_row_tv">
        <item name="android:layout_width">@dimen/screen_edge_intent</item>
    </style>

    <style name="footer_total_row_tv" parent="footer_row_tv">
        <item name="android:textSize">@dimen/footer_total_row_text_size</item>
    </style>

    <style name="footer_screen_edge_intent_tv" parent="footer_row_tv">
        <item name="android:layout_width">@dimen/screen_edge_intent</item>
    </style>

	<style name="cost_val_etv" parent="number_decimal_etv">
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>

    <style name="share_val_etv" parent="number_etv">
        <item name="android:textColor">@color/sky_blue_darkest</item>
    </style>

    <dimen name="text_view_height">40dp</dimen>
    <dimen name="text_margin">4dp</dimen>
    <dimen name="icon_size">32dp</dimen>
    <dimen name="icon_margin">8dp</dimen>
    <dimen name="screen_edge_intent">16dp</dimen>
    <dimen name="hidden_input_width">0dp</dimen>
    <dimen name="bill_input_width">72dp</dimen>
    <dimen name="tax_tip_input_width">56dp</dimen>
    <dimen name="dbl_bill_input_width">160dp</dimen>
    <dimen name="dlg_input_width">@dimen/dbl_bill_input_width</dimen>
    <dimen name="check_box_width">16dp</dimen>
    <dimen name="check_box_height">30dp</dimen>
    <dimen name="check_box_stroke_width">1dp</dimen>

    <dimen name="app_name_text_size">20dp</dimen>
    <dimen name="text_size">14dp</dimen>
    <dimen name="footer_row_text_size">16dp</dimen>
    <dimen name="footer_total_row_text_size">20dp</dimen>

    <color name="action_bar">@color/sky_blue_dark</color>
    <color name="bill_records">@color/sky_blue_lightest</color>
    <color name="footer">@color/sky_blue_dark</color>
    <color name="footer_total">@color/sky_blue_dark</color>

    <color name="bill_record_picked">@color/orange_lightest</color>
    <color name="bill_record_not_picked">@android:color/transparent</color>

    <color name="check_box_checked">@color/sky_blue</color>
    <color name="check_box_not_checked">@android:color/transparent</color>

    <color name="sky_blue">#33A7FF</color>
    <color name="sky_blue_light">#95D1FF</color>
    <color name="sky_blue_lightest">#E3F3FF</color>
    <color name="sky_blue_dark">#4D8EC0</color>
    <color name="sky_blue_darkest">#1165A6</color>
    
    <color name="orange">#FFA225</color>
    <color name="orange_light">#FFCE8E</color>
    <color name="orange_lightest">#FFF2E1</color>
    <color name="orange_dark">#C08B45</color>
    <color name="orange_darkest">#A6640C</color>

    <array name="apply_touch_listener_res_ids">
        <item>@id/iv_icon</item>
        <item>@id/tv_app_name</item>

        <item>@id/sv_bill_rows</item>

        <item>@id/tv_subtotal_lbl</item>
        <item>@id/tv_subtotal_empty</item>
        <item>@id/tv_subtotal_sum</item>

        <item>@id/tv_tax_lbl</item>
        <item>@id/tv_tax_main</item>
        <item>@id/tv_tax_sum_main</item>

        <item>@id/tv_tip_lbl</item>
        <item>@id/tv_tip_main</item>
        <item>@id/tv_tip_sum_main</item>

        <item>@id/tv_total_lbl</item>
        <item>@id/tv_total_empty</item>
        <item>@id/tv_total_sum</item>
    </array>

</resources>
