<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/vertical_linear_layout_v" >

    <LinearLayout
        android:id="@+id/llv_current_bill_will_be_deleted"
        android:visibility="gone"
        style="@style/zone_content_horizontal_llv" >

        <TextView
            style="@style/alignment_v" />

        <TextView
            android:text="@string/dlg_current_bill_will_be_deleted"
            style="@style/app_text_v" />

        <TextView
            style="@style/alignment_v" />

    </LinearLayout>

    <LinearLayout
        style="@style/zone_content_horizontal_llv" >

            <TextView
                style="@style/fill_v" />

            <com.yagodar.android.billplease.custom.BillValuesDbEditText
                android:id="@+id/et_def_share"
                android:hint="@string/lbl_def_share"
                android:gravity="center_vertical|center_horizontal"
                app:tableName="bill_values"
                app:tableColumnName="def_share"
                app:valueType="integer"
                app:defValueStr="@string/min_share_int"
                app:minValueStr="@string/min_share_int"
                app:minFractionDigits="@integer/min_fraction_digits"
                app:maxFractionDigits="@integer/max_fraction_digits"
                app:hintTypeface="italic"
                style="@style/dlg_number_etv" />

            <TextView
                style="@style/fill_v" />

    </LinearLayout>

</LinearLayout>