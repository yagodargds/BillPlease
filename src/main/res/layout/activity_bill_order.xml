<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <FrameLayout
        android:id="@+id/bill_order_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/view_edge_small_gap"
        android:paddingBottom="@dimen/view_edge_small_gap" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/view_edge_small_gap" >

        <Button
            android:id="@+id/bill_order_update_button"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="@string/button_update"
            android:layout_weight="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee" />

    </LinearLayout>

    <EditText
        android:id="@+id/bill_order_et_hidden"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:enabled="false">
        <requestFocus />
    </EditText>

</LinearLayout>