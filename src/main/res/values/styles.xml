<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/view_edge_small_gap</item>
        <item name="android:paddingBottom">@dimen/view_edge_small_gap</item>
    </style>

    <style name="Row.Top" parent="Row">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Row.Bottom" parent="Row">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Row.Item">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="Label.Header" parent="Label">
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="Label.Date" parent="Label">
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Label.Header.BillRow" parent="Label.Header">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/view_edge_small_gap</item>
        <item name="android:layout_marginEnd">@dimen/view_edge_small_gap</item>
    </style>

    <style name="Label.BillRow" parent="Label">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/view_edge_small_gap</item>
        <item name="android:layout_marginStart">@dimen/view_edge_small_gap</item>
    </style>

    <style name="Label.Date.BillRow" parent="Label.Date">
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_marginLeft">@dimen/view_edge_gap</item>
        <item name="android:layout_marginStart">@dimen/view_edge_gap</item>
    </style>

</resources>