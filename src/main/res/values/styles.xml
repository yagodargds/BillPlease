<resources>
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
    </style>

    <style name="app_v">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="vertical_linear_layout_v" parent="app_v">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal_linear_layout_v" parent="app_v">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal_scroll_v_totals" parent="app_v">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="app_text_v" parent="app_v">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_view_height</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

    <style name="fill_blank_v" parent="app_v">
        <item name="android:layout_width">@dimen/unitary_width</item>
    </style>

    <style name="apply_t_l_v" parent="fill_blank_v">
        <item name="android:tag">@string/tag_apply_touch_listener</item>
    </style>

    <style name="fill_blank_horizontal_llv" parent="fill_blank_v">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="half_horizontal_llv" parent="fill_blank_horizontal_llv">
        <item name="android:layout_weight">@string/zone_weight_half</item>
    </style>

    <style name="fill_horizontal_llv" parent="fill_blank_horizontal_llv">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="alignment_v" parent="apply_t_l_v">
        <item name="android:layout_weight">@string/zone_weight_half</item>
    </style>

    <style name="fill_v" parent="apply_t_l_v">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="sub_total_intent_fill_v" parent="apply_t_l_v">
        <item name="android:layout_weight">@string/zone_weight_sub_total_intent</item>
    </style>

    <style name="screen_edge_intent_tv" parent="app_v">
        <item name="android:tag">@string/tag_apply_touch_listener</item>
        <item name="android:layout_width">@dimen/screen_edge_intent</item>
    </style>

    <style name="dlg_text_v" parent="app_text_v">
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="bill_text_v" parent="app_text_v">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="icon_v" parent="app_v">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="hidden_etv" parent="app_v">
        <item name="android:layout_width">@dimen/hidden_input_width</item>
    </style>

    <style name="app_llv" parent="vertical_linear_layout_v">
        <item name="android:baselineAligned">false</item>
        <item name="android:background">@color/sky_blue_lightest</item>
    </style>

    <style name="app_row_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="zone_content_horizontal_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="zone_item_name_horizontal_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_width">@dimen/unitary_width</item>
        <item name="android:layout_weight">@string/zone_weight_item_name</item>
    </style>

    <style name="zone_tax_tip_horizontal_llv" parent="horizontal_linear_layout_v">
        <item name="android:layout_width">@dimen/unitary_width</item>
        <item name="android:layout_weight">@string/zone_weight_tax_tip</item>
    </style>

    <style name="dlg_input_etv" parent="app_text_v">
        <item name="android:layout_width">@dimen/dlg_input_width</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="edit_text_v" parent="bill_text_v">
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>

    <style name="app_name_tv" parent="bill_text_v">
        <item name="android:textSize">@dimen/app_name_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bill_row_tv" parent="bill_text_v">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="footer_tv" parent="bill_text_v">
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>

    <style name="button_icon_v" parent="icon_v">
        <item name="android:onClick">@string/on_btn_click_method_name</item>
        <item name="android:background">@android:color/transparent</item> <!-- TODO -->
    </style>

    <style name="check_box_v" parent="button_icon_v">
        <item name="android:layout_height">@dimen/check_focused_height</item>
        <item name="android:layout_width">@dimen/check_focused_width</item>
        <item name="android:layout_margin">@dimen/check_margin</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="action_bar_llv" parent="app_row_llv">
        <item name="android:background">@color/action_bar</item>
    </style>

    <style name="footer_llv" parent="app_row_llv">
        <item name="android:background">@color/footer</item>
    </style>

    <style name="footer_total_llv" parent="app_row_llv">
        <item name="android:background">@color/footer_total</item>
    </style>

    <style name="dlg_number_etv" parent="dlg_input_etv">
        <item name="android:inputType">number</item>
    </style>

    <style name="input_etv" parent="edit_text_v">
        <item name="android:minWidth">@dimen/bill_input_min_width</item>
    </style>

    <style name="number_etv" parent="input_etv">
        <item name="android:inputType">number</item>
    </style>

    <style name="number_decimal_etv" parent="input_etv">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="tax_tip_etv" parent="number_decimal_etv">
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:textColor">@color/sky_blue_lightest</item>
    </style>

    <style name="bill_screen_edge_intent_tv" parent="bill_row_tv">
        <item name="android:layout_width">@dimen/screen_edge_intent</item>
    </style>

    <style name="footer_tv_lbl" parent="footer_tv">
        <item name="android:tag">@string/tag_apply_touch_listener</item>
    </style>

    <style name="footer_tv_total" parent="footer_tv">
        <item name="android:textSize">@dimen/footer_total_text_size</item>
    </style>

    <dimen name="text_view_height">40dp</dimen>
    <dimen name="text_margin">4dp</dimen>
    <dimen name="icon_size">32dp</dimen>
    <dimen name="icon_margin">8dp</dimen>
    <dimen name="screen_edge_intent">16dp</dimen>
    <dimen name="hidden_input_width">0dp</dimen>
    <dimen name="bill_input_min_width">4dp</dimen>
    <dimen name="dlg_input_width">144dp</dimen>
    <dimen name="check_margin">4dp</dimen>
    <dimen name="check_height">28dp</dimen>
    <dimen name="check_focused_height">30dp</dimen>
    <dimen name="check_width">14dp</dimen>
    <dimen name="check_stroke_width">1dp</dimen>
    <dimen name="check_focused_width">16dp</dimen>
    <dimen name="check_total_width">24dp</dimen> //check_width + 2*check_margin + [2*check_stroke_width (for focuse stroke)]
    <dimen name="unitary_width">1dp</dimen>

    <dimen name="app_name_text_size">20dp</dimen>
    <dimen name="text_size">14dp</dimen>
    <dimen name="footer_text_size">16dp</dimen>
    <dimen name="footer_total_text_size">20dp</dimen>

    <string name="zone_weight_half">0.5</string>
    <string name="zone_weight_sub_total_intent">0.25</string>
    <string name="zone_weight_item_name">0.45</string>
    <string name="zone_weight_tax_tip">0.55</string>

    <string name="tag_apply_touch_listener">apl_t_l</string>
    <string name="tag_footer_record">apl_t_l</string>

    <color name="action_bar">@color/sky_blue_dark</color>
    <color name="bill_records">@color/sky_blue_lightest</color>
    <color name="footer">@color/sky_blue_dark</color>
    <color name="footer_total">@color/sky_blue_dark</color>

    <color name="bill_record_picked">@color/orange_lightest</color>
    <color name="bill_record_def_values_picked">@color/orange_light</color>
    <color name="bill_record_not_picked">@android:color/transparent</color>

    <color name="check_on_solid">@color/sky_blue</color>
    <color name="check_on_stroke">@color/sky_blue_darkest</color>
    <color name="check_on_pressed_solid">@color/orange_light</color>
    <color name="check_on_pressed_stroke">@color/orange</color>
    <color name="check_on_disabled_solid">@color/orange_lightest</color>
    <color name="check_on_disabled_stroke">@color/orange_light</color>
    <color name="check_focused_solid">@android:color/transparent</color>
    <color name="check_focused_stroke">@color/orange_dark</color>
    <color name="check_off_solid">@android:color/transparent</color>
    <color name="check_off_stroke">@color/sky_blue_darkest</color>
    <color name="check_off_pressed_solid">@android:color/transparent</color>
    <color name="check_off_pressed_stroke">@color/orange_light</color>
    <color name="check_off_disabled_solid">@android:color/transparent</color>
    <color name="check_off_disabled_stroke">@color/orange_light</color>

    <color name="bill_record_et_hint_text">@color/sky_blue_light</color>
    <color name="bill_record_et_text">@color/sky_blue_darkest</color>

    <color name="sky_blue">#33A7FF</color>
    <color name="sky_blue_light">#95D1FF</color>
    <color name="sky_blue_lightest">#E3F3FF</color>
    <color name="sky_blue_dark">#4D8EC0</color>
    <color name="sky_blue_darkest">#1165A6</color>

    <color name="orange">#FFA225</color>
    <color name="orange_light">#FFCE8E</color>
    <color name="orange_lightest">#FFF2E1</color>
    <color name="orange_dark">#C08B45</color>
    <color name="orange_darkest">#A6640C</color>

    <array name="apply_touch_listener_res_ids">
        <item>@id/iv_icon</item>
        <item>@id/tv_app_name</item>

        <item>@id/sv_bill_rows</item>
    </array>

</resources>
